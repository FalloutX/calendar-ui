@require 'nib'

global-reset()
#app
  width: 70%
  margin: 0 auto
  min-height: 100vh
  box-shadow: 0px 0px 40px 20px #e7e7e7
#app-header
  width: 100%
  padding: 20px 0 15px
  text-align: center
  font-size: 2.5em
  font-family: "Helvetica Neue", Helvetica, sans-serif
  font-weight: 200
  letter-spacing: 8px
  color: #4042ef
  margin: 0 auto

.app-header-heading
  height: 40px
  width: 100%
  clear: both
.app-header-heading span
  display: inline-block
  height: 40px
  line-height: 40px

span.app-header-month
  width: 40%
  float: left
  font-weight: 400

  text-transform: capitalize;
  font-size: 1.0em

span.app-header-year
  width: 40%
  float: right
  font-weight: 100
  font-size: 0.8em

.stripes-border
  height: 10px
  background: repeating-linear-gradient(
    -25deg,
    #606dbc,
    #606dbc 10px,
    #4652ac 10px,
    #4652ac 20px
  )

ul.days
  width: 100%
  font-size: 1.5em
  color: #3949ac
  margin: 10px auto 0px
  box-sizing: border-box
  padding: 0% 3%
  clear: left
  font-family: sans-serif;
  overflow: hidden
  text-align: center
  font-weight: 100
  height: 40px
  line-height: 40px
  li
    float: left
    width: 14%
    margin: 0 auto
    box-sizing: border-box
    padding: 0 1%
    text-align: center

ul.dates
  width: 100%
  box-sizing: border-box
  padding: 1.5% 3%
  margin: 0px auto
  font-size: 1.5em
  clear:left
  font-family: sans-serif
  font-weight: 100
  overflow: auto
  li
    float: left
    width: 14.25%
    padding: 10px 1%
    text-align: right
    box-sizing: border-box
    height: 100px
    transition: all 0.5s ease
  li.not-null
    border: 1px solid #b7b7b7
  li.not-null:hover
    box-shadow: 0px 0px 14px 7px #d3d3d3;
    border: none;
    transform: scale(1.1);
    background-color: white;
    opacity: 1
    cursor: pointer
  li.active
    text-decoration: underline
    color: #d31990

#app-footer
    text-align: center
    width: 100%
    font-size: 1.1em
    font-family: "Helvetica Neue", Helvetica, sans-serif
    font-weight: 200
    letter-spacing: 2px
    padding: 10px 0px
    border-top: 1px solid #444
    a
      color: #444
      cursor: pointer
